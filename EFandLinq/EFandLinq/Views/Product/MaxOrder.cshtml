@model IEnumerable<EFandLinq.Models.MaximumPrice>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase" style="font:center">
            Maximum price order month wise
        </h4>
        <br />
        <table class="table table-success table-striped" style="width:50%; margin-left: auto; margin-right: auto">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>POID</th>
                    <th>Price</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("MMM/yy")</td>
                        <td>@item.Poid.POID</td>
                        <td>@item.Price</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>  